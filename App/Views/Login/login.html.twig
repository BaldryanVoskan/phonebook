{% extends 'base.html.twig' %}
{% block body %}
<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark mb-3">
    <a class="navbar-brand  bg-dark text-white" href="/">PhoneBook</a>
    <div class="collapse navbar-collapse align-right">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a href="/" class="abba nav-link">Home</a>
            </li>
            <li class="nav-item">
                <a href="/Login/index" class="abba nav-link">Log In</a>
            </li>
            <li class="nav-item">
                <a href="/Signup/index" class="abba nav-link ">Sign Up</a>
            </li>
        </ul>
    </div>
</nav>


<div class="container d-flex justify-content-center">
    <div id="loginbox" style="margin-top:110px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info" >
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
            </div>

            <div style="padding-top:30px" class="panel-body" >

                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form id="loginform" class="form-horizontal" role="form" method="post">
                    <div class="error my-4">
                        {% if login_fail == 1 %}
                            <p class="colorerror text-danger">Sorry logging is failed</p>
                        {% endif %}
                        {% for error in errors %}
                            <div class="colorerror text-danger">
                                {{ error }}
                            </div>
                        {% endfor %}
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                    </div>
                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                            </label>
                        </div>
                    </div>
                    <div style="margin-top:10px" class="form-group">
                        <!-- Button -->
                        <div class="col-sm-12 controls">
                            <input type="hidden" name="token" value="{{ token }}">
                            <input type="submit" value="Login" id="btn-login" class="btn btn-success">
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                Don't have an account!
                                <a href="/Signup/index" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                    Sign Up Here
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}