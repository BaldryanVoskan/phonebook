{% extends 'base.html.twig' %}
{% block body %}
        <table class="table table-dark" id="table">
            <thead>
            <tr>
                <th scope="col">ContactName</th>
                <th scope="col">ContactAddress</th>
                <th scope="col">Number_1</th>
                <th scope="col">Number_2</th>
                <th scope="col">Number_3</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {{ qaq }}
{% for contact in contactList %}
            <tr>
                <th scope="row">{{ contact.ContactName }}</th>
                <td>{{ contact.ContactAddress }}</td>
                <td>{{ contact.Number_1 }}</td>
                <td>{{ contact.Number_2 }}</td>
                <td>{{ contact.Number_3 }}</td>
                <td><a href="/Contact/{{ contact.id }}/edit">Edit</a> <a href="/Contact/{{ contact.id }}/delete">Delete</a> </td>
            </tr>
{% endfor %}

            </tbody>
        </table>
    {% if allContacts is not empty %}
    <nav aria-label="Page navigation example">
        <ul class="pagination" id="pagination">

            {% if page >=2 %}
                      <li class="page-item"><a class="page-link" href="/Home/1/index/{{  page -1 }}">{{  'Previous' }}</a></li>
            {% endif %}
            {% for item in 1..total_pages %}
                {% if item == page %}
                      <li class="page-item active"><a class="page-link" href="/Home/1/index/{{  item }}">{{  item }}</a></li>
              {% else %}
                  <li class="page-item"><a class="page-link" href="/Home/1/index/{{  item }}">{{ item }}</a></li>
                {% endif %}
            {% endfor %}
            {% if page < total_pages %}
                <li class="page-item "><a class="page-link" href="/Home/1/index/{{  page + 1 }}">{{ 'Next' }}</a></li>

            {% endif %}
        </ul>
    </nav>
    {% endif %}

{% endblock %}
