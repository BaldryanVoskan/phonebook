{% extends 'base.html.twig' %}
{% block body %}

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark mb-3">
        <a class="navbar-brand  bg-dark text-white" href="/">PhoneBook</a>
        <div class="collapse navbar-collapse align-right">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <div class="username_capital">
                        <a href="/Home/{{ contact.user_id }}/index" class="abba nav-link ">{{ username }}'s Home</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a href="/Logout/index" class="abba nav-link ">Log out</a>
                </li>
            </ul>
        </div>
    </nav>


    {% if contact  %}
    <form action="/Contact/edit" method="post" class="form_edit">
        <div class="form-group">
            <label for="newcontactname">Contact Name</label>
            <input type="text" class="form-control" id="newcontactname" value="{{ contact.ContactName }}"
                   placeholder="Enter New Name" name="newcontactname">
        </div>
        <div class="form-group">
            <label for="newcontactaddress">Contact Address</label>
            <input type="text" class="form-control" id="newcontactaddress" value="{{ contact.ContactAddress }}"
                   placeholder="Enter New Address" name="newcontactaddress">
        </div>

        <div class="form-group">
            <label for="newnumber1">Number 1 </label>
            <input type="text" class="form-control" id="newnumber1" value="{{ contact.Number_1 }}"
                   placeholder="Enter  New Number" name="newnumber1">
        </div>

        <div class="form-group">
            <label for="newnumber2">Number 2 </label>
            <input type="text" class="form-control" id="newnumber2" value="{{ contact.Number_2 }}"
                   placeholder="Enter Second New Number" name="newnumber2">
        </div>

        <div class="form-group">
            <label for="newnumber3">Number 3 </label>
            <input type="text" class="form-control" id="newnumber2" value="{{ contact.Number_3 }}"
                   placeholder="Enter Third New Number" name="newnumber3">
        </div>
        <input type="hidden" name="contact_id" value="{{ contact.id }}">
        <input type="submit" class="btn btn-warning" value="Save">
    </form>
        {% else %}
        <h2 class="Error-edit-message">Contact doesn't exist</h2>
    {% endif %}
{% endblock %}