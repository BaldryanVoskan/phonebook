{% extends 'base.html.twig' %}
{% block body %}

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark mb-3">
        <a class="navbar-brand  bg-dark text-white" href="/">PhoneBook</a>
        <div class="collapse navbar-collapse align-right">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <div class="username_capital">
                        <a href="/Home/{{ contact.user_id }}/index" class="abba nav-link ">{{ username }}'s Home</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a href="/Logout/index" class="abba nav-link ">Log out</a>
                </li>
            </ul>
        </div>
    </nav>
<form action="/Contact/index" method="post" class="form_createcontact" >
    <div class="form-group" >
        <label for="contactname">Contact Name</label>
        <input type="text" class="form-control" id="contactname"  placeholder="Enter Name" name="contactname">
    </div>
    <div class="form-group">
        <label for="contactaddress">Contact Address</label>
        <input type="text" class="form-control" id="contactaddress" placeholder="Enter Address" name="contactaddress">
    </div>

    <div class="form-group">
        <label for="number1">Number 1 </label>
        <input type="text" class="form-control" id="number1" placeholder="Enter Number" name="number1">
    </div>

    <div class="form-group">
        <label for="number2">Number 2 </label>
        <input type="text" class="form-control" id="number2" placeholder="Enter Second Number" name="number2">
    </div>
    <div class="form-group">
        <label for="number3">Number 3 </label>
        <input type="text" class="form-control" id="number2" placeholder="Enter Third Number" name="number3">
    </div>
    <input type="submit" class="btn btn-warning" value="Create contact">
</form>


{% endblock %}

